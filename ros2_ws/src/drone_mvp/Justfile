# ========================================
# KAERTEI 2025 FAIO - Competition Justfile
# Ubuntu 22.04 LTS Optimized Commands
# ========================================

# Default recipe (shows help)
default:
    @echo "ğŸš KAERTEI 2025 FAIO - Ubuntu 22.04 Competition System"
    @echo "======================================================"
    @just --list

# ===================
# ğŸš€ QUICK START
# ===================

# Complete setup from scratch (Ubuntu 22.04 only)
setup:
    @echo "ğŸ”§ Setting up Ubuntu 22.04 for KAERTEI 2025..."
    @./setup_ubuntu.sh

# Test complete system
test:
    @echo "ğŸ§ª Testing complete system readiness..."
    @./test_ubuntu.sh

# Run mission in debug mode (recommended for competition)
mission:
    @echo "ğŸš Launching mission in debug mode..."
    @./launch_mission_ubuntu.sh debug

# Run mission in autonomous mode
mission-auto:
    @echo "ğŸ¤– Launching autonomous mission..."
    @./launch_mission_ubuntu.sh auto

# ===================
# ğŸ› ï¸ SYSTEM MANAGEMENT
# ===================

# System status and health check
status:
    @echo "ğŸ“Š System Status for Ubuntu 22.04:"
    @echo "=================================="
    @echo "ğŸ–¥ï¸  OS: $(lsb_release -d | cut -f2)"
    @echo "ğŸ Python: $(python3 --version)"
    @echo "ğŸ¤– ROS 2: $(test -f /opt/ros/humble/setup.bash && echo 'Humble âœ…' || echo 'Not installed âŒ')"
    @./validate_ubuntu.py --quick

# Full system validation
validate:
    @echo "ğŸ” Running full Ubuntu 22.04 system validation..."
    @./validate_ubuntu.py

# System diagnostics and troubleshooting
doctor:
    @echo "ğŸ©º Running system diagnostics..."
    @./doctor_ubuntu.py

# Clean up build artifacts and temporary files
clean:
    @echo "ğŸ§¹ Cleaning up system..."
    @rm -rf build/ install/ log/
    @rm -rf ~/.ros/log/*
    @echo "âœ… Cleanup complete"

# ===================
# ğŸ—ï¸ BUILD & DEVELOPMENT
# ===================

# Build ROS 2 workspace
build:
    @echo "ğŸ”¨ Building ROS 2 workspace..."
    @cd ../../ && source /opt/ros/humble/setup.bash && colcon build --packages-select drone_mvp

# Build with verbose output for debugging
build-verbose:
    @echo "ğŸ”¨ Building with verbose output..."
    @cd ../../ && source /opt/ros/humble/setup.bash && colcon build --packages-select drone_mvp --cmake-args -DCMAKE_VERBOSE_MAKEFILE=ON

# Install Python dependencies
deps:
    @echo "ğŸ“¦ Installing Ubuntu 22.04 dependencies..."
    @pip3 install -r requirements.txt

# ===================
# ğŸ§ª TESTING MODES
# ===================

# Test hardware connections
test-hardware:
    @echo "ğŸ”§ Testing hardware connections..."
    @python3 -c "from drone_mvp.hardware_config import HardwareConfig; HardwareConfig().validate_config()"

# Test MAVROS connection
test-mavros:
    @echo "ğŸ“¡ Testing MAVROS connection..."
    @timeout 10 ros2 topic echo /mavros/state --once || echo "âš ï¸  MAVROS not responding"

# Test camera systems
test-camera:
    @echo "ğŸ“¸ Testing camera systems..."
    @python3 test_camera.py

# Test mission checkpoints in simulation
test-mission:
    @echo "ğŸ¯ Testing mission checkpoints..."
    @python3 -c "from drone_mvp.checkpoint_mission_node import MissionCheckpoint; print(f'Found {len(list(MissionCheckpoint))} checkpoints')"

# ===================
# ğŸš MISSION MODES
# ===================

# Debug mission with MAVROS
mission-debug:
    @echo "ğŸ› Debug mission with MAVROS (manual progression)..."
    @./launch_mission_ubuntu.sh debug mavros

# Debug mission with direct MAVLink
mission-debug-direct:
    @echo "ğŸ› Debug mission with direct MAVLink..."
    @./launch_mission_ubuntu.sh debug mavlink

# Competition simulation
mission-sim:
    @echo "ğŸ Competition simulation mode..."
    @python3 simulate_mission.py --mode competition

# ===================
# ğŸ”§ CONFIGURATION
# ===================

# Edit hardware configuration
config:
    @echo "âš™ï¸ Opening hardware configuration..."
    @nano config/hardware_config.conf

# Show current configuration
config-show:
    @echo "ğŸ“‹ Current Ubuntu 22.04 Configuration:"
    @echo "===================================="
    @cat config/hardware_config.conf

# Backup configuration
config-backup:
    @echo "ğŸ’¾ Backing up configuration..."
    @cp config/hardware_config.conf config/hardware_config.conf.backup.$(date +%Y%m%d_%H%M%S)

# Reset configuration to defaults
config-reset:
    @echo "ğŸ”„ Resetting configuration to Ubuntu 22.04 defaults..."
    @cp config/hardware_config.conf.default config/hardware_config.conf

# ===================
# ğŸ“Š MONITORING
# ===================

# Show ROS 2 topics
topics:
    @echo "ğŸ“¡ Active ROS 2 topics:"
    @timeout 5 ros2 topic list || echo "âš ï¸  ROS 2 not active"

# Show ROS 2 nodes
nodes:
    @echo "ğŸ”— Active ROS 2 nodes:"
    @timeout 5 ros2 node list || echo "âš ï¸  ROS 2 not active"

# Monitor mission status in real-time
monitor:
    @echo "ğŸ“Š Monitoring mission status..."
    @watch -n 1 'ros2 topic echo /checkpoint_status --once'

# ===================
# ğŸ†˜ EMERGENCY & RECOVERY
# ===================

# Emergency stop all processes
emergency-stop:
    @echo "ğŸ†˜ EMERGENCY STOP - Killing all processes..."
    @pkill -f "ros2" || true
    @pkill -f "mavros" || true
    @pkill -f "python3.*drone" || true
    @echo "âœ… All drone processes stopped"

# Quick restart of ROS 2 daemon
restart-ros2:
    @echo "ğŸ”„ Restarting ROS 2 daemon..."
    @ros2 daemon stop
    @ros2 daemon start
    @echo "âœ… ROS 2 daemon restarted"

# Reset USB devices (for hardware connection issues)
reset-usb:
    @echo "ğŸ”Œ Resetting USB devices..."
    @sudo rmmod ftdi_sio && sudo modprobe ftdi_sio || true
    @sudo rmmod usbserial && sudo modprobe usbserial || true
    @echo "âœ… USB devices reset"

# Full system recovery
recover:
    @echo "ğŸš‘ Full system recovery for Ubuntu 22.04..."
    @just emergency-stop
    @just reset-usb
    @just restart-ros2
    @sleep 2
    @just status
    @echo "âœ… Recovery complete"

# ===================
# ğŸ“š INFORMATION
# ===================

# Show competition checklist
checklist:
    @echo "âœ… KAERTEI 2025 Competition Checklist:"
    @echo "===================================="
    @echo "â–¡ Ubuntu 22.04 LTS installed"
    @echo "â–¡ ROS 2 Humble installed"
    @echo "â–¡ MAVROS configured"
    @echo "â–¡ Hardware connected (/dev/ttyUSB0 or /dev/ttyACM0)"
    @echo "â–¡ GPS coordinates updated in config"
    @echo "â–¡ Camera systems tested"
    @echo "â–¡ Mission checkpoints validated (26 total)"
    @echo "â–¡ Emergency stop procedures practiced"
    @echo "â–¡ Backup hardware ready"
    @echo ""
    @echo "ğŸ“ Run 'just validate' for automated checks"

# Show system information
info:
    @echo "â„¹ï¸  KAERTEI 2025 System Information:"
    @echo "=================================="
    @echo "OS: $(lsb_release -d | cut -f2)"
    @echo "Kernel: $(uname -r)"
    @echo "Python: $(python3 --version)"
    @echo "ROS 2: $(test -f /opt/ros/humble/setup.bash && echo 'Humble' || echo 'Not installed')"
    @echo "Workspace: $(pwd)"
    @echo "Shell: $(basename $SHELL)"
    @echo ""
    @echo "ğŸ“‚ Key Files:"
    @echo "   Config: config/hardware_config.conf"
    @echo "   Logs: ~/.ros/log/"
    @echo "   Python: $(which python3)"

# Show version information
version:
    @echo "ğŸ·ï¸  KAERTEI 2025 FAIO Version Information:"
    @echo "========================================"
    @echo "Competition: KAERTEI 2025"
    @echo "Category: FAIO (Fixed-wing Autonomous Indoor Obstacle)"
    @echo "Platform: Ubuntu 22.04 LTS"
    @echo "ROS 2: Humble Hawksbill"
    @echo "Mission System: 26-Checkpoint Navigation"
    @echo "Last Updated: $(date)"

# ===================
# ğŸ’¡ HELP & DOCUMENTATION
# ===================

# Show quick help for competition day
help-quick:
    @echo "ğŸš€ KAERTEI 2025 - Quick Help for Competition:"
    @echo "============================================"
    @echo ""
    @echo "ğŸ START COMPETITION:"
    @echo "  just mission         # Debug mode (recommended)"
    @echo "  just mission-auto    # Autonomous mode"
    @echo ""
    @echo "ğŸ†˜ EMERGENCY:"
